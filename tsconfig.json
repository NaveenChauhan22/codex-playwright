{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "@playwright/test"],
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "settings.json"],
  "exclude": ["node_modules", "html-report", "test-results"]
}
